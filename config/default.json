{
  "mode": "test",
  "tz": "Australia/Melbourne",
  "appName": "Binance Trading Bot",
  "binance": {
    "live": {
      "apiKey": "",
      "secretKey": ""
    },
    "test": {
      "apiKey": "",
      "secretKey": ""
    }
  },
  "redis": {
    "host": "binance-redis",
    "port": 6379,
    "password": "",
    "db": 0
  },
  "mongo": {
    "host": "binance-mongo",
    "port": 27017,
    "database": "binance-bot"
  },
  "slack": {
    "enabled": false,
    "webhookUrl": "",
    "channel": "",
    "username": ""
  },
  "localTunnel": {
    "enabled": true,
    "subdomain": "default"
  },
  "featureToggle": {
    "notifyOrderConfirm": true,
    "notifyDebug": false,
    "notifyOrderExecute": true
  },
  "authentication": {
    "enabled": true,
    "password": "123456",
    "loginLimiter": {
      "maxConsecutiveFails": 5,
      "duration": 10800,
      "blockDuration": 900
    }
  },
  "jobs": {
    "alive": {
      "enabled": true,
      "cronTime": "0 0 9 * * *"
    },
    "trailingTrade": {
      "enabled": true,
      "cronTime": "* * * * * *",
      "symbols": [
        "XRPBTC",
        "ADABTC",
        "DOTBTC",
        "LUNABTC",
        "LINKBTC",
        "EOSBTC",
        "LTCBTC",
        "BCHBTC",
        "FTMBTC",
        "AVAXBTC",
        "XTZBTC",
        "ATOMBTC",
        "CAKEBTC",
        "MANABTC",
        "NEARBTC",
        "TRXBTC",
        "SANDBTC",
        "UNIBTC",
        "XLMBTC",
        "ONEBTC",
        "MATICBTC"
      ],
      "botOptions": {
        "authentication": {
          "lockList": true,
          "lockAfter": 120
        },
        "autoTriggerBuy": {
          "enabled": true,
          "triggerAfter": 10,
          "conditions": {
            "whenLessThanATHRestriction": true,
            "afterDisabledPeriod": true,
            "tradingView": {
              "overrideInterval": "",
              "whenStrongBuy": true,
              "whenBuy": true
            }
          }
        },
        "orderLimit": {
          "enabled": true,
          "maxBuyOpenOrders": 4,
          "maxOpenTrades": 7
        },
        "tradingView": {
          "interval": "1d",
          "useOnlyWithin": 8,
          "ifExpires": "ignore"
        },
        "logs": {
          "deleteAfter": 30
        }
      },
      "candles": {
        "interval": "30m",
        "limit": 280
      },
      "buy": {
        "enabled": true,
        "gridTrade": [
          {
            "triggerPercentage": 1.057,
            "stopPercentage": 1.008,
            "limitPercentage": 1.0088,
            "minPurchaseAmount": -1,
            "minPurchaseAmounts": {
              "USDT": 10,
              "BTC": 0.00021,
              "ETH": 0.005,
              "BUSD": 10
            },
            "maxPurchaseAmount": -1,
            "maxPurchaseAmounts": {
              "USDT": 60,
              "BTC": 0.0019,
              "ETH": 0.021,
              "BUSD": 60
            }
          }
        ],
        "lastBuyPriceRemoveThreshold": -1,
        "lastBuyPriceRemoveThresholds": {
          "USDT": 10,
          "BTC": 0.0001,
          "ETH": 0.005,
          "BUSD": 10
        },
        "athRestriction": {
          "enabled": true,
          "candles": {
            "interval": "1d",
            "limit": 30
          },
          "restrictionPercentage": 0.92
        },
        "tradingView": {
          "whenStrongBuy": true,
          "whenBuy": true
        },
        "minPurchaseAmount": -1,
        "maxPurchaseAmount": -1
      },
      "sell": {
        "enabled": true,
        "gridTrade": [
          {
            "triggerPercentage": 1.0537,
            "stopPercentage": 0.99,
            "limitPercentage": 0.989,
            "quantityPercentage": -1,
            "quantityPercentages": {
              "USDT": 0.6,
              "BTC": 0.6,
              "ETH": 0.6,
              "BUSD": 0.6
            }
          }
        ],
        "stopLoss": {
          "enabled": true,
          "maxLossPercentage": 0.65,
          "disableBuyMinutes": 120,
          "orderType": "market"
        },
        "tradingView": {
          "forceSellOverZeroBelowTriggerPrice": {
            "whenNeutral": false,
            "whenSell": false,
            "whenStrongSell": false
          }
        }
      },
      "system": {
        "temporaryDisableActionAfterConfirmingOrder": 20,
        "checkManualOrderPeriod": 5,
        "placeManualOrderInterval": 5,
        "refreshAccountInfoPeriod": 1,
        "checkOrderExecutePeriod": 10
      }
    },
    "trailingTradeIndicator": {
      "enabled": true,
      "cronTime": "* * * * * *"
    }
  }
}
